<!DOCTYPE html>
<html>
<head>
	<title>Data Show</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>
	<div class="container mt-5">
		<a href="/" class="btn btn-secondary float-right mb-1">Add Data</a>
		<table class="table table-bordered table-border shadow">
			<tr>
				<th>User ID</th>
				<th>User Name</th>
				<th>User Email</th>
				<th>User Password</th>
				<th>Action</th>
			</tr>
			<% users.forEach((user) => { %>
			<tr>
					<td><%= user.user_id %></td>
					<td><%= user.user_name %></td>
					<td><%= user.user_email %></td>
					<td><%= user.user_password %></td>
					<td>
						<a class="btn btn-sm btn-success" href="/edit/<%= user.user_id %>">Edit</a>
						<a class="btn btn-sm btn-danger" href="/delete/<%= user.user_id %>">Delete</a>
					</td>
			</tr>
			<% }); %>
		</table>
	</div>
</body>
</html>